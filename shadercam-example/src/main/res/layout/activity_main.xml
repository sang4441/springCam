<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SimpleShaderActivity">

    <!--<com.androidexperiments.shadercam.view.SquareTextureView-->
    <TextureView
        android:id="@+id/texture_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.androidexperiments.shadercam.fragments.GraphicOverlay
        android:id="@+id/faceOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:progress="50"
        android:max="100"
        android:layout_above="@+id/shape_list"
        android:layout_gravity="center"
        android:padding="10dp"/>

    <!--android:layout_above="@id/btn_record"-->


    <LinearLayout
        android:id="@+id/shape_list"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/wrapper_bottom"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/view_shape_height"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/icon_surface_48"
            android:tint="@color/white"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/view_shape_face"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/icon_face_48"
            android:tint="@color/white"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/view_shape_shoulder"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/icon_shoulders_48"
            android:tint="@color/white"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/view_shape_chest"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/icon_chest_48"
            android:tint="@color/white"
            android:layout_weight="1"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/wrapper_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:background="@drawable/btn_camera_shot"/>

        <Button
            android:id="@+id/btn_shot"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_camera_shot"/>

        <Button
            android:id="@+id/btn_detect"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            android:background="@drawable/btn_camera_shot"/>
    </RelativeLayout>


